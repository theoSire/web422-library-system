{{> modals}}

{{> contentBox 
    contentTitle="Login" 
    content="Please provide your credentials below"
}}

<div class="container">
    <form action="/login" method="POST">
        <div class="form-group mb-2">
            <label for="username">Username</label>
            <input 
                class="form-control" 
                type="text" 
                id="username" 
                name="username" 
                value="{{username}}"
                required
            >
        </div>
        <div class="form-group mb-2">
            <label for="password">Password</label>
            <div class="d-flex align-items-center overflow-hidden">
                <input 
                    class="form-control" 
                    type="password" 
                    id="password" 
                    name="password" 
                    oninput="toggleIconVisibility('password')" 
                    value="{{password}}"
                    required
                >
                <i onclick="togglePassword('password')" id="toggleIconPassword" class="bi bi-eye"></i>
            </div>
        </div>
        <button class="btn btn-success mt-1" type="submit">Login</button>
    </form>
    <p class="mt-3">Don't have an account? <a href="/register">Sign up here!</a></p>
</div>
